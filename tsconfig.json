{
  "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "rootDir": "./src",
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "noImplicitAny": true,
	  "removeComments": true,
	  "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@src/*": ["./src/*"]
      }
  },
  "include": [
      "src/**/*.ts",
      "test/**/*"
  ],
  "exclude": ["node_modules"]
}